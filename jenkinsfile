pipeline {
    agent any

    environment {
        AWS_ACCOUNT_ID="339712719975"
        AWS_DEFAULT_REGION="us-east-1"
        ECR_REPO_NAME = 'DEVOPREPO'
        DOCKER_IMAGE_NAME = 'nginx-image'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/isioma12/ecr-jenkins.git']])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build -t('nginx', './etc/nginx/nginx.conf')
                }
            }
        }

        stage('Scan Image') {
            steps {
                script {
                    def scanResult = docker.image('nginx').withRegistry('https://339712719975.dkr.ecr.us-east-1.amazonaws.com/devoprepo').push()
                    echo "Image scan result: ${scanResult}"
                }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    docker.withRegistry('https://339712719975.dkr.ecr.us-east-1.amazonaws.com/devoprepo', AWS_CREDENTIALS) {
                        docker.image('NGNIX').push("${DEVOPREPO}:${env.BUILD_NUMBER}")
                    }
                }
            }
        }
    }
}
