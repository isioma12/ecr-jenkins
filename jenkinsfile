pipeline {
    agent any
    environment {
        AWS_ACCOUNT_ID="339712719975"
        AWS_DEFAULT_REGION="us-east-1"
        IMAGE_REPO_NAME="devoprepo"
        IMAGE_TAG="nginx"
        REPOSITORY_URI = "339712719975.dkr.ecr.us-east-1.amazonaws.com/devoprepo"
    }
   
    stages {
        
         stage('Logging into AWS ECR') {
            steps {
                script {
                sh """aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com"""
                }
                 
            }
        }
        
        stage('Cloning Git') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: '339712719975', url: 'https://github.com/isioma12/ecr-jenkins.git']])
            }
        }
  
    // Building Docker image
    stage('Building image') {
      steps{
        script {
          COPY --from=nginx:latest /etc/nginx/nginx.conf /nginx.conf
        }
      }
    }
   
    // Uploading Docker images into AWS ECR
    stage('Pushing to ECR') {
     steps{  
         script {
                sh """docker tag ${DEVOPREPO}:${NGINX} ${339712719975.dkr.ecr.us-east-1.amazonaws.com/devoprepo}:$IMAGE_TAG"""
                sh """docker push ${339712719975}.dkr.ecr.${us-east-1}.amazonaws.com/${DEVOPREPO}:${NGINX}"""
         }
        }
      }
    }
}
